<!DOCTYPE html>
<html lang="en">
   <head>
      <!-- basic -->
      <meta charset="utf-8">
      <meta http-equiv="X-UA-Compatible" content="IE=edge">
      <!-- mobile metas -->
      <meta name="viewport" content="width=device-width, initial-scale=1">
      <meta name="viewport" content="initial-scale=1, maximum-scale=1">
      <!-- site metas -->
      <title>Sabeel</title>
      <link rel="icon" type="image/png" href="{{ asset('images/sabeel.png') }}">

      <meta name="keywords" content="">
      <meta name="description" content="">
      <meta name="author" content="">
      <!-- bootstrap css -->
      <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
      <!-- style css -->
      <link rel="stylesheet" href="css/style.css">
      <!-- Responsive-->
      <link rel="stylesheet" href="css/responsive.css">
      <!-- fevicon -->
      <link rel="icon" href="images/fevicon.png" type="image/gif" />
      <!-- Scrollbar Custom CSS -->
      <link rel="stylesheet" href="css/jquery.mCustomScrollbar.min.css">
      <!-- Font Awesome -->
      <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
      
      <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script><![endif]-->
   </head>
   <body class="main-layout">
      {% block body %}{% endblock %}
      
      <footer id="contact">
         <div class="footer">
            <div class="container">
               <div class="row">
                  <div class="col-md-4">
                     <div class="titlepage">
                        <h2>Contact Us</h2>
                     </div>
                  </div>
                  <div class="col-md-12">
                     <form id="request" class="main_form needs-validation" novalidate>
                        <div class="row">
                           <div class="col-md-3">
                              <input class="contactus form-control" placeholder="Full Name" type="text" name="full_name" required>
                              <div class="invalid-feedback">Veuillez entrer votre nom.</div>
                           </div>
                           <div class="col-md-3">
                              <input class="contactus form-control" placeholder="Email" type="email" name="email" required>
                              <div class="invalid-feedback">Veuillez entrer une adresse email valide.</div>
                           </div>
                           <div class="col-md-3">
                              <input class="contactus form-control" placeholder="Phone Number" type="tel" name="phone_number" required>
                              <div class="invalid-feedback">Veuillez entrer un numéro de téléphone.</div>
                           </div>
                           <div class="col-md-8">
                              <textarea class="contactus1 form-control" placeholder="Message" name="message" required></textarea>
                              <div class="invalid-feedback">Veuillez entrer un message.</div>
                           </div>
                           <div class="col-xl-4">
                              <button class="send_btn btn btn-primary" type="submit">Send</button>
                           </div>
                        </div>
                     </form>
                  </div>
               </div>
            </div>
         </div>
      </footer>
      <!-- Javascript files-->
      <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
      <script src="js/jquery.mCustomScrollbar.concat.min.js"></script>
      <script src="js/custom.js"></script>

      <!-- Validation côté client -->
      <script>
          (function () {
              'use strict';
              var forms = document.querySelectorAll('.needs-validation');
              Array.prototype.slice.call(forms).forEach(function (form) {
                  form.addEventListener('submit', function (event) {
                      if (!form.checkValidity()) {
                          event.preventDefault();
                          event.stopPropagation();
                      }
                      form.classList.add('was-validated');
                  }, false);
              });
          })();
      </script>
   </body>
</html>