{% extends 'base.html.twig' %}

{% block title %}User Details{% endblock %}

{% block body %}
    <h1>User Details</h1>

    <div class="row">
        <div class="col-md-6 mb-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">{{ user.firstname }} {{ user.lastname }}</h5>
                    <h6 class="card-subtitle mb-2 text-muted">{{ user.email }}</h6>
                    <p class="card-text">
                        <strong>ID:</strong> {{ user.id }}<br>
                        <strong>Roles:</strong> {{ user.roles ? user.roles|json_encode : '' }}<br>
                        <strong>Verified:</strong> {{ user.isVerified ? 'Yes' : 'No' }}<br>
                        <strong>User Type:</strong> {{ user.userType }}<br>
                        <strong>Firstname:</strong> {{ user.firstname }}<br>
                        <strong>Lastname:</strong> {{ user.lastname }}<br>
                    </p>
                    <a href="{{ path('app_user_index') }}" class="btn btn-secondary">Back to List</a>
                    <a href="{{ path('app_user_edit', {'id': user.id}) }}" class="btn btn-primary">Edit</a>
                    {{ include('user/_delete_form.html.twig') }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}